let dayOfWeek = prompt("Enter a day of the week:");

switch (dayOfWeek.toLowerCase()) {
  case "Monday":
    console.log("Task for Monday: Do laundry.");
    break;
  case "Tuesday":
    console.log("Task for Tuesday: Rest.");
    break;
  case "Wednesday":
    console.log("Task for Wednesday: Basketball Training.");
    break;
  case "Thursday":
    console.log("Task for Thursday: Complete project report.");
    break;
  case "Friday":
    console.log("Task for Friday: Attend team practice.");
    break;
  case "Saturday":
    console.log("Task for Saturday: Relax and enjoy the weekend.");
    break;
  case "Sunday":
    console.log("Task for Sunday: Go to Church.");
    break;
  default:
    console.log("Invalid day of the week.");
}
